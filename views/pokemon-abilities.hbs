<h1>Pokemon Abilities</h1>
<table>
    <thead>
        <tr>
            {{#each pokemon_abilities.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each pokemon_abilities}}
        <tr>
            <td>{{this.pokemon_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.pokemon_ability}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>